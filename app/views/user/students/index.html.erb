<h1>Students</h1>
<%= form_tag user_students_path, method: :get do %>
  <div class="input-group mb-3 w-25">
    <%= text_field_tag :name, params[:name], class:"form-control", placeholder: "Search by Name" %>
    <%= submit_tag "Search", class: "btn btn-outline-secondary", id:"button-addon2" %>
  </div>
<% end %>
<div class="table-responsive">
  <table class = 'table mx-auto table-striped table-bordered table-condensed text-center align-middle'>
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Address</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.id %></td>
          <td><%= link_to student.name, user_student_path(student), class: "text-decoration-none text-dark fw-bold" %></td>
          <td><%= student.age %></td>
          <td><%= student.address %></td>
          <td><%= link_to 'Media', media_user_student_path(student), class: "btn btn-primary"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Student', new_user_student_path, class: "btn btn-primary mb-2" %><br>
<div class="d-flex justify-content-end"><%= paginate @students, theme: 'bootstrap-5'%></div>
